{
  "version": 2,
  "builds": [
    { "src": "templates/**/*.html", "use": "@vercel/static" },
    { "src": "**/*.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/$", "dest": "/templates/index.html" },
    { "handle": "filesystem" },
    { "src": "^/(.*)$", "dest": "/templates/$1" }
  ]
}

